header.header
    .header__logo
        a(href="/") 
            img(src="/img/logo-white.png" alt="Natours logo")
    nav.nav.nav--tours
        a.nav__el.all--tours(href="/") All tours
        a.nav__el(href="https://documenter.getpostman.com/view/12446173/UVsEUTyS#0be0d02a-6de5-42f2-b707-6a4e2fcaa94e") API
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout Log out 
            a.nav__el(href="/me")
                img.nav__user-img(src=`/img/users/${user.photo}`, alt=`Photo of ${user.photo}`)
                span= user.name.split(" ")[0]
        else
            a.nav__el(href="/login") Log in
            a.nav__el.nav__el--cta(href="/signup") Sign up

